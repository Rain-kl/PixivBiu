# --------------------------------------------------------------
# PixivBiu environment config example
# Priority: OS env > .env > config.yml > app/config/biu_default.yml
# --------------------------------------------------------------
#
# System
# SYS_HOST=127.0.0.1:4001
# SYS_DEBUG=false
# SYS_AUTOOPEN=true

# Download storage mode: LOCAL | IMMICH
BIU_DOWNLOAD_STORAGEMODE=LOCAL

# Immich settings (required when storage mode is IMMICH)
BIU_DOWNLOAD_IMMICH_HOST=https://immich.example.com
BIU_DOWNLOAD_IMMICH_APIKEY=replace_with_api_key
BIU_DOWNLOAD_IMMICH_VERIFYTLS=true
BIU_DOWNLOAD_IMMICH_BASEPATH=/api
BIU_DOWNLOAD_IMMICH_TIMEOUTSEC=20
BIU_DOWNLOAD_IMMICH_RETRYMAX=3

# Pixiv token
# Priority: PIXIV_REFRESH_TOKEN  > token file
PIXIV_REFRESH_TOKEN=replace_with_pixiv_refresh_token
#
# Optional: change token file path (default: /app/usr/.token inside container)
# PIXIV_TOKEN_FILE=/app/usr/.token
# BIU_PIXIV_TOKEN_FILE=/app/usr/.token

# --------------------------------------------------------------
# Optional settings for auth and whitelist (disabled by default)
# --------------------------------------------------------------
TARGET: "http://pixivbiu:4001"
AUTH_MODE: "password"
VALID_MODE: "jwt"
PASSWORD: "change-me"
PASSWORD_MAX_FAILS: "10"
PASSWORD_BAN_TIME: "900"
WHITELIST_TIMEOUT: "3600"